		cout << "        USER         " << endl;
		cout << "====================" << endl;
			for (int h = 0; h < i; h++) {

				cout << "[" << h + 1 << "]." << mahasiswa.nama[h] << endl;

			}

		cout << "====================" << endl;

		}
		else if (pilih == 6) {
			return 0;
		}
		else {

			cout << "PILIHAN TIDAK ADA" << endl;

		}

		cout << "KEMBALI? [Y/N] : "; cin >> ulang;
	}while (ulang == "Y");

}
